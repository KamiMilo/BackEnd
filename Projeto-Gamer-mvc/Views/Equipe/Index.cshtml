
@model Equipe 
@{
    ViewData["Title"]= "Equipe";
}

<link rel="stylesheet" href="~/css/equipes.css">

 <main>  

<section class="container-grid cadastro-equipes">
@if (ViewBag.UserName == null)
{
    <a asp-area="" asp-controller="Login" asp-action="Index">
        Login
    </a>
}

else{

 <form method="post"  class="frm-cad-equipe" action ="@Url.Action("Cadastrar")" enctype="multipart/form-data" >
                <div class="cadequipe-titulo">
                    <h1>Cadastro de Equipes</h1>
                    <hr>
                </div>

                <input name="Nome"  class="campo-entrada" type="text" placeholder="Digite o nome da sua equipe:" required>
                <label class="foto" for="foto-file">
                    Nenuma imagem selecionada...
                    <input name="Imagem" type="file" id="foto-file">
                </label>
                
                <button>Cadastro</button>

         </form>

 @*tabela*@ 

<table >
    <thead>
        <th>Id </th>
        <th>Nome </th>
        <th>Imagem </th>
        <th>Ações</th>
    </thead>

    <tbody>

        @foreach (Equipe equipe in ViewBag.Equipe)
        {
        <tr>
            <td>@equipe.IdEquipe</td>
            <td>@equipe.Nome</td>
            <td>
            <img src="/img/Equipes/@equipe.Imagem" alt="Imagem da equipe" width="50px">
            </td>
            <td>
                <a asp-area = ""asp-controller ="Equipe" asp-action= "Excluir" asp-route-id="@equipe.IdEquipe"> <img class="yellow-trash" src="~/assets/trash.png" alt=""></a> 
                <p>ㅤ</p>
                <p>/</p>
                <p>ㅤ</p>
                 <a asp-area="" asp-controller="Equipe" asp-action="Editar" asp-route-id="@equipe.IdEquipe"><img class="yellow-trash" src="~/assets/Pencil.png" alt=""></a>
            </td>
                 
               
        </tr>
            
        }
    </tbody>
</table>
}
 </section>
    </main>