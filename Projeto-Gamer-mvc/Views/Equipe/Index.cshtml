
@model Equipe 
@{
    ViewData["Title"]= "Equipe";
}

<!-- Formulario para tela cadastro de equipes -->
<h1>Tela De Equipes</h1>

<form method="post" action ="@Url.Action("Cadastrar")" enctype="multipart/form-data">

    <label for="Imagem">Nome</label>
    <input type="text" name="Nome">

    <label for="Imagem">Imagem</label>
    <input type="file" name="Imagem">

    <button type="submit">Cadastrar</button>
</form>

<!-- tabela -->

<table class="table table-striped table-responsive" >
    <thead>
        <th>Id </th>
        <th>Nome </th>
        <th>Imagem </th>
    </thead>

    <tbody>
        <!--lê tudo que está na viewbag (class:EQUIPECONTROLLER)-->
        @foreach (Equipe equipe in ViewBag.Equipe)
        {
        <tr>
            <td>@equipe.IdEquipe</td>
            <td>@equipe.Nome</td>
            <td>@equipe.Imagem</td>
        </tr>
            
        }
    </tbody>
</table>