@model Jogador
@{
    ViewData["title"]="Editar";
}
<link rel="stylesheet" href="~/css/jogadores.css">


<main>  

        <section class="container-grid cadastro-equipes">
            
            @if (ViewBag.UserName == null)
{
    <a asp-area="" asp-controller="Login" asp-action="Index">
        Login
    </a>
}
else{
            <form  class="frm-cad-equipe" method= "post" action="@Url.Action("Atualizar")">

                <div class="cadequipe-titulo">
                    <h1>Edição de Jogadores</h1>
                    <hr>
                </div>

               @* <input class="campo-entrada" type="number" id="id-equipe" placeholder="Digite o Id da sua equipe:">*@

                
                <input class="campo-entrada" name="Nome" type="text" id="nome-jogador" value="@ViewBag.jogador.Nome" placeholder="Digite o nome do Jogador:">
                <input class="campo-entrada" name="Email" type="email" id="email-jogador" value="@ViewBag.jogador.Email" placeholder="Digite o Email do Jogador:">
                <input class="campo-entrada" name="Senha" type="password" id="senha"  placeholder="Digite a Senha:">
                
                
                <select class="campo-entrada" name="IdEquipe" id="equipe-select">

            
              <option value="0">Selecione uma opção</option>
            @foreach (Equipe equipe in ViewBag.Equipe)
            {
                <option value="@equipe.IdEquipe"> @equipe.Nome</option>
            }
            </select>
   
                <button>Atualizar</button>
                
            </form>

}      </section>
    </main>



























